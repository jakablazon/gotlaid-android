<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"
    tools:context="com.gotlaid.android.MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:id="@+id/whoopTv"
        android:width="216dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:text="@string/whoop"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="216dp"
        android:layout_height="216dp"
        android:background="@drawable/circle_black"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/i_just_got_laid"
        android:id="@+id/gotLaidButton"
        android:textSize="16pt"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:onClick="uploadAction"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/letYourFriendsKnowTv"
        android:width="256dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
